# Environment Configuration
# Copy this file to .env and fill in your actual values

# Gemini API Configuration
GOOGLE_API_KEY=your_gemini_api_key_here

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here  # Optional, for cloud instances

# Application Configuration
APP_NAME=Invoice Reimbursement System
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, production, testing
DEBUG=True
LOG_LEVEL=INFO

# Security Configuration (REQUIRED for production)
SECRET_KEY=your_super_secure_secret_key_here_min_32_chars
ALLOWED_HOSTS=*  # Use specific domains in production: domain1.com,domain2.com
JWT_SECRET_KEY=your_jwt_secret_key_here  # Optional
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Vector Store Configuration
COLLECTION_NAME=invoice_reimbursements
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_SIZE=384

# File Upload Configuration
MAX_FILE_SIZE=50
ALLOWED_EXTENSIONS=pdf,zip
UPLOAD_DIRECTORY=uploads

# LLM Configuration
LLM_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0.1
MAX_TOKENS=4096

# Chat Configuration
MAX_CONVERSATION_HISTORY=10
